@model SportStore.Models.Entities.Category

@{
    Layout = "_AdminLayout";

}


<div class="authentication-form-block">
    <div class="authentication-form">
        <div class="p-3 d-flex flex-column">
            <h2 class="text-center">Edit category</h2>

            <form method="post" asp-controller="Categories" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" value="@Model.Id" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Name"></label><br />
                        <input type="text" asp-for="Name" class="w-100" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save changes" class="center-block btn-primary btn-lg" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>