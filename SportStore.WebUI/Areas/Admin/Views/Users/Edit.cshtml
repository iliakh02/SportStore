@model SportStore.WebUI.Areas.Admin.Models.UserEditViewModel


<div class="authentication-form-block">
    <div class="authentication-form">
        <div class="p-3 d-flex flex-column">
            <h2 class="text-center">Register</h2>

            <form method="post" asp-area="Admin" asp-controller="Users" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <div class="form-group">
                        <input type="hidden" name="userId" value="@Model.User.Id" />
                    </div>
                    <div class="form-group">
                        <label asp-for="User.FirstName"></label><br />
                        <input type="text" asp-for="User.FirstName" class="w-100" />
                        <span asp-validation-for="User.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="User.LastName"></label><br />
                        <input type="text" asp-for="User.LastName" class="w-100" />
                        <span asp-validation-for="User.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="User.Email"></label><br />
                        <input type="email" asp-for="User.Email" class="w-100" />
                        <span asp-validation-for="User.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="User.PhoneNumber"></label><br />
                        <input type="tel" asp-for="User.PhoneNumber" class="w-100" />
                        <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                    </div>

                    <div>
                        @foreach (var role in Model.AllRoles)
                        {
                            <input type="checkbox" name="roles" value="@role.Name" @(Model.ActiveRoles.Contains(role.Name) ? "checked=\"checked\"" : "") /> @role.Name <br />
                        }
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save changes" class="center-block btn-primary btn-lg" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>