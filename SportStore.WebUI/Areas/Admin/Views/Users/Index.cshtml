@using SportStore.WebUI.Areas.Admin.Models
@addTagHelper *, SportStore.WebUI
@model SportStore.WebUI.Areas.Admin.Models.UsersViewModel



    <div class="bg-light p-2 shadow">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">
                        <sort-header action="Index" current="@Model.SortViewModel.Current" property="@Model.SortViewModel.IdSort">Id</sort-header>
                    </th>
                    <th scope="col">
                        <sort-header action="Index" current="@Model.SortViewModel.Current" property="@Model.SortViewModel.FirstNameSort">Name</sort-header>
                    </th>
                    <th scope="col">
                        <sort-header action="Index" current="@Model.SortViewModel.Current" property="@Model.SortViewModel.LastNameSort">Surname</sort-header>
                    </th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone number</th>
                    <th scope="col">Roles</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>

            <tbody>
                @for (int i = 0; i < Model.Users.Count; i++)
                {
                    <tr scope="row">
                        <td>@Model.Users[i].Id</td>
                        <td>@Model.Users[i].FirstName</td>
                        <td>@Model.Users[i].LastName</td>
                        <td>@Model.Users[i].UserName</td>
                        <td>@Model.Users[i].Email</td>
                        <td>@Model.Users[i].PhoneNumber</td>
                        <td>@Model.Roles[i]</td>
                        <td>
                            <a asp-route-userId="@Model.Users[i].Id" asp-controller="Users" asp-action="Edit" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                            <form method="post" asp-route-id="@Model.Users[i].Id" asp-controller="Users" asp-action="Delete">
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
<br />
<br />

<page-link page-model="Model.PageModel" page-action="Index" sort-order="@Model.SortViewModel.Current"></page-link>